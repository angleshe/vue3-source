    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-sort-class-members": "^1.20.0",
    "execa": "^8.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "minimist": "^1.2.8",
    "prettier": "^3.2.5",
    "rollup": "^4.12.0",
